    <!-- <script src="https://your-site-or-cdn.com/fontawesome/v6.1.1/js/all.js" data-auto-replace-svg="nest"></script> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400&Barlow:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    

    <style>
        body {
            /* background-color: #121212; */
            font-family: 'Rubik', sans-serif;
        }
    </style>
  </head>

  <body>

    <div class="container" style="padding-top: 50px;">
        <h3>Blog Post</h3>
        <div class="card-deck mt-3">
            <div class="row"  style="margin-right: 0; margin-left: 0;">
             <% for (i = cards.length - 1; i >= 0; i--) { %>
                 <div class="">
                   <div class="card mt-3" style="background-color: #FFFFE0">
                       <div class="card-coloums">
                       <div class="card-body">
                       <h5 class="card-title"><%= cards[i].title %></h5>
                       <a href="/home/<%= i %>">read</a>
                       <a class="ml-3" href="/remove/<%=cards[i]._id%>">
                            delete post
                        </a>
                        <a class="ml-3" href="/update/<%=cards[i]._id%>">
                            update post
                        </a>
                        <br>
                        <small class="text-center" style="color: black"><%= cards[i].date %></small>
                       
                    </div>
                     </div>
                     </div>
                 </div>
          <% } %>
            </div></div>
    </div>

    <br><br><br>

    <div class="text-left container" style="background-color: #eee; padding: 30px">

        <h3 class="mb-3" style="color: black;">Add Blog Post</h3>
        <form action="/create" method="post">

            <div class="row">
                <div class="col-lg-6"><br><br>
                    <label class="form-label">Title</label><br>
                    <input type="text" class="form-control" name="title" placeholder="Add suitable Title for the Blog post" required>
                </div>

                <div class="col-lg-6"><br><br>
                    <label class="form-label">Source</label><br>
                    <input type="text" class="form-control" name="source" placeholder="Add Source of the blog post" required>
                </div>
                
            </div>

            <div> <br><br>
                <label class="form-label">Content</label><br>
                <textarea name="content" class="form-control" cols="40" rows="5" placeholder="Add Content for the blog post" required></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg mt-5">Post</button>
            </div>

        </form>
    </div>

    <br>
    <div class="text-center">
        <p>@sangeeta shetty</p>
      </div>
  </body>
</html>