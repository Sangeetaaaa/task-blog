  </head>
  <body>

<div>
    <div class="text-left container " style="padding-top: 50px;">
        <form action="/update" method="post">
            <input type="text " name="id" value="<%= card._id %>" hidden>
            <div class="row">
                <div class="col-lg-6"><br><br>
                    <label class="form-label">Title</label><br>
                    <input type="text" class="form-control" name="title" value="<%= card.title %>" required>
                </div>

                <div class="col-lg-6"><br><br>
                    <label class="form-label">Source</label><br>
                    <input type="text" class="form-control" name="source" value="<%= card.source %>" required>
                </div>   
            </div>

            <div> <br><br>
                <label class="form-label">Content</label><br>
                <textarea name="content" class="form-control" cols="40" rows="5" required><%= card.content %></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg mt-5">Update</button>
            </div>
        </form>
    </div>
</div>
